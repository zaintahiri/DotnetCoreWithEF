@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> _signInManager;

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown" style="text-decoration:none">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbardropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Hello @User.Identity.Name
        </a>
        <!-- Dropdown menu -->
        <ul class="dropdown-menu" style="text-decoration:none" aria-labelledby="navbardropdown">
            <li><a class="dropdown-item" asp-controller="account" asp-action="logout">Logout</a></li>
        </ul>
    </li>
}
else
{ 
   
    <a class="btn btn-outline-primary" style="margin-right:10px;" asp-controller="account" asp-action="signin">Login</a>
    <a class="btn btn-primary" asp-controller="account" asp-action="signup">Register</a>
    
}
