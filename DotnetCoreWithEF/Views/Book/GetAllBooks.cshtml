@model List<BookModel>;

<div class="container">
    @section title {
        <h3 class="display-4">All Books</h3>
        <hr />
    }
    <div class="row">
    @foreach (var record in Model)
    {       
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg">
                        <image href="~/lib/images/zain.jpg" width="100%" height="100%" />
                    </svg>
                    @* <svg class ="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"/> *@
                <div class="card-body">
                    <h5 class="card-title">@record.Titile</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@record.Author</h6>
                    <p class="card-text">@record.Description</p>
                        <a asp-controller="book" asp-action="bookdetails" asp-route-id="@record.Id" class="btn btn-primary">More Details..</a>
                </div>
            </div>
        </div>       
    
    }
    </div>
  
</div>

