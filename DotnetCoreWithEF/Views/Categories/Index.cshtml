
@model List<CategoryModel>;
@section title{
    <h1>Categories</h1>
}

@if (Model != null && Model.Count>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                        @*href="@($"/categories/edit/{item.Id}")">Edit</a>*@
                        </td>
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="deletecategory" asp-route-id="@item.Id" onclick="    return confirmDelete();">Delete</a></td>
                </tr>                
            }

            
            
        </tbody>

    </table>
    <div class="col-3">
                
                    <a class="btn btn-primary" asp-controller="categories" asp-action="AddCategory">Add</a>
                
            </div>

}

@section Scripts{

    <script>
function confirmDelete() { 
    return confirm("Are your sure you want to delete this category...!");
}
    </script>
}


